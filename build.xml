<project>
	<property environment="env"/>
  <property name="jobname"       				value="${env.JOB_NAME}" /> 
	<property name="svnrevision"       			value="${env.SVN_REVISION}" /> 
	<property name="buildnumber"       			value="${env.BUILD_NUMBER}" /> 
	<property name="buildtimestamp"       		value="${env.BUILD_TIMESTAMP}" /> 
	<property name="line.separator"  			value="&#13;&#10;"/>
    
  		<echo Jenkin-Project: ${jobname}${line.separator}SVN Revision: ${svnrevision}${line.separator}Build Number: ${buildnumber}${line.separator}Build Date: ${buildtimestamp} </echo>
</project>
